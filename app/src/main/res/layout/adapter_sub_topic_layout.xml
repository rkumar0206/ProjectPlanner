<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <CheckBox
        android:id="@+id/checkBoxSubTopic"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/etSubTopicName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/etSubTopicName" />

    <EditText
        android:id="@+id/etSubTopicName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="sub topic name"
        android:inputType="textMultiLine|textCapSentences|textAutoCorrect"
        app:layout_constraintStart_toEndOf="@+id/checkBoxSubTopic"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/addAnotherSubTopicBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:drawableStart="@drawable/ic_baseline_add_circle_outline_24"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:padding="3dp"
        android:text="Add Sub topic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/etSubTopicName"
        app:layout_constraintTop_toBottomOf="@+id/etSubTopicName" />

    <ImageButton
        android:id="@+id/deleteSubTopicBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/etSubTopicName"
        app:srcCompat="@drawable/ic_baseline_close_24" />
</androidx.constraintlayout.widget.ConstraintLayout>