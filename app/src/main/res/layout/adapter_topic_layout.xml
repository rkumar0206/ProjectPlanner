<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    >

    <EditText
        android:id="@+id/etTopicName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="topic name"
        android:inputType="textMultiLine|textCapSentences|textAutoCorrect"
        app:layout_constraintStart_toEndOf="@+id/checkBoxTopicName"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/addSubTopicBtn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="32dp"
        android:layout_marginTop="5dp"
        android:drawablePadding="10dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:padding="5dp"
        android:text="Add sub topic  "
        android:textSize="14sp"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/ic_baseline_add_circle_outline_24"
        app:layout_constraintStart_toStartOf="@+id/etTopicName"
        app:layout_constraintTop_toBottomOf="@+id/etTopicName" />


    <CheckBox
        android:id="@+id/checkBoxTopicName"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/etTopicName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/etTopicName" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/subTopicRV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/etTopicName"
        app:layout_constraintTop_toBottomOf="@+id/etTopicName"
        tools:visibility="gone" />


    <TextView
        android:id="@+id/addAnotherTopicBtn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="8dp"
        android:drawablePadding="10dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:padding="5dp"
        android:text="Add topic  "
        android:textSize="15sp"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/ic_baseline_add_circle_outline_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/etTopicName"
        app:layout_constraintTop_toBottomOf="@+id/subTopicRV" />


    <ImageButton
        android:id="@+id/clearTopicButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/etTopicName"
        app:srcCompat="@drawable/ic_baseline_close_24" />

</androidx.constraintlayout.widget.ConstraintLayout>